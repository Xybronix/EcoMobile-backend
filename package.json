{
  "name": "ecomobile-backend",
  "version": "1.0.0",
  "description": "EcoMobile Backend API - Multi-database support",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc && mkdir -p dist/uploads",
    "start": "npx prisma db push --accept-data-loss && node dist/server.js",
    "postinstall": "npx prisma generate",
    "migrate": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:prod": "npx prisma db push --accept-data-loss",
    "db:seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "ecomobile",
    "bike-sharing",
    "api"
  ],
  "author": "Brayan Weko",
  "license": "MIT",
  "dependencies": {
    "@googlemaps/google-maps-services-js": "^3.4.2",
    "@prisma/client": "^6.19.0",
    "@types/express": "^4.17.25",
    "bcryptjs": "^2.4.3",
    "cassandra-driver": "^4.8.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.3.0",
    "helmet": "^7.1.0",
    "i18next": "^23.7.11",
    "i18next-fs-backend": "^2.3.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^7.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.15.3",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
    "socket.io": "^4.6.0",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.2",
    "twilio": "^5.11.2",
    "uuid": "^13.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express-rate-limit": "^5.1.3",
    "@types/i18next": "^12.1.0",
    "@types/i18next-fs-backend": "^1.1.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.25",
    "@types/nodemailer": "^6.4.21",
    "@types/pg": "^8.15.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.0.2",
    "prisma": "^6.19.0",
    "typescript": "^5.9.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
