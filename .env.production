# ==========================================
# ENVIRONMENT CONFIGURATION
# ==========================================
NODE_ENV=production
PORT=10000
API_VERSION=v1

# ==========================================
# DATABASE CONFIGURATION (Railway MySQL)
# ==========================================
DB_TYPE=mysql

# Railway MySQL Configuration
MYSQL_HOST=containers.railway.app
MYSQL_PORT=6392
MYSQL_USER=root
MYSQL_PASSWORD=ton_password_railway
MYSQL_DATABASE=railway

# Prisma URL (utilisée par Prisma)
DATABASE_URL="mysql://root:ton_password_railway@containers.railway.app:6392/railway?sslaccept=strict"

# ==========================================
# JWT CONFIGURATION
# ==========================================
JWT_SECRET=ton_super_secret_jwt_tres_long_et_complexe_change_moi_123456
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=ton_refresh_secret_super_long_et_securise_789012
JWT_REFRESH_EXPIRES_IN=30d

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
FRONTEND_URL=https://tonusername.github.io
DEFAULT_LANGUAGE=fr
SUPPORTED_LANGUAGES=fr,en

# ==========================================
# CORS CONFIGURATION
# ==========================================
CORS_ORIGIN=https://tonusername.github.io,https://ecomobile-frontend.onrender.com,http://localhost:3000,http://localhost:5173

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# FILE UPLOAD
# ==========================================
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=info
LOG_DIR=./logs

# ==========================================
# EMAIL (Optionnel - peut être désactivé)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=ton_email@gmail.com
SMTP_PASSWORD=ton_app_password_gmail
EMAIL_FROM=noreply@ecomobile.com
EMAIL_FROM_NAME=EcoMobile

# ==========================================
# PAYMENT (Optionnel - peut être désactivé)
# ==========================================
COOLPAY_API_URL=https://api.my-coolpay.com
COOLPAY_API_KEY=ton_api_key_coolpay
COOLPAY_MERCHANT_ID=ton_merchant_id
COOLPAY_SECRET_KEY=ton_secret_key
COOLPAY_FEE_PERCENTAGE=2
ORANGE_FEE_PERCENTAGE=4
TOTAL_FEE_PERCENTAGE=6

# ==========================================
# ADMIN DEFAULTS
# ==========================================
DEFAULT_ADMIN_EMAIL=admin@ecomobile.com
DEFAULT_ADMIN_PASSWORD=Admin@123456